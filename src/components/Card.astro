---
import { ARS } from "../util/currency";
import Button from "./Button.astro";
import { Image } from "astro:assets";

interface Props {
  title: string;
  href: string;
  img: ImageMetadata;
  price: number;
  slug: string;
}

const { title, href, img, price, slug } = Astro.props;
---

<article class="block overflow-hidden rounded">
  <Image src={img} alt={title} transition:name={slug} class="bg-primary" />
  <div class="bg-secondary p-4">
    <div class="space-y-4">
      <h3 class="text-primary-dark text-xl font-bold">{title}</h3>
      <slot />
    </div>
    <div class="flex items-center gap-4">
      <Button href={href}>Comprar</Button>
      <span class="text-lg font-bold">
        {ARS.format(price)}
      </span>
    </div>
  </div>
</article>
